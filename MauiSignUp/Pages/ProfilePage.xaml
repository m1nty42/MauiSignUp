<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiSignUp.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Profile">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="Profile" FontSize="24" FontAttributes="Bold" />

        <Label Text="Signup successful!" FontSize="16" />

        <Frame Padding="12">
            <VerticalStackLayout Spacing="8">
                <Label Text="Username:" FontAttributes="Bold" />
                <Label Text="{Binding Username}" />

                <Label Text="Email:" FontAttributes="Bold" />
                <Label Text="{Binding Email}" />
            </VerticalStackLayout>
        </Frame>

        <Label Text="(Password is not displayed for security reasons.)"
               FontSize="12"
               Opacity="0.7" />

        <Button Text="Sign Out" Clicked="OnSignOutClicked" />
    </VerticalStackLayout>
</ContentPage>
